{
  "name": "luar",
  "version": "1.4.0",
  "description": "Luar is a library for facilitating extremely simple Reactive Programming in JavaScript, inspired by Vue.js and Hyperactiv.",
  "author": "Lua MacDougall <luawhat@gmail.com> (https://lua.wtf/)",
  "license": "MIT",
  "keywords": [
    "reactive",
    "react",
    "computed",
    "computed properties",
    "properties",
    "observable",
    "model",
    "mvc"
  ],
  "main": "index.js",
  "unpkg": "index.min.js",
  "types": "index.d.ts",
  "scripts": {
    "test": "nyc --reporter=lcov --reporter=text-summary mocha index.test.js",
    "minify": "terser index.js --output index.min.js --config-file terser.json",
    "prepublishOnly": "npm test && npm run minify"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "jshint": "^2.12.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "terser": "^4.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luawtf/Luar.git"
  },
  "bugs": {
    "url": "https://github.com/luawtf/Luar/issues"
  },
  "homepage": "https://github.com/luawtf/Luar#readme"
}
